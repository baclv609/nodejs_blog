<div class="mt-4">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3">
    {{#each courses}}
      <div class="col">
        <div class="card mt-4">
          <a href="courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.name}}"
            />
          </a>
          <div class="card-body">
            <a href="courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.decription}}</p>
            <a href="#" class="btn btn-primary">Mua khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>